{
  "name": "@yasp/tron-lib",
  "version": "1.5.1",
  "description": "yasp fi TRON network library",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "clean": "rm -rf ./dist && rm -rf node_modules",
    "test": "run-p test:unit test:e2e test:perf lint",
    "test:e2e": "jest --verbose --config=jest.e2e.config.ts",
    "test:unit": "jest --verbose --config=jest.unit.config.ts",
    "test:perf": "jest --verbose --config=jest.perf.config.ts",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --fix --cache .",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write"
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "tsconfig": "workspace:*",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.4",
    "@types/lodash": "^4.5.7",
    "eslint": "^8.18.0",
    "jest": "^28.1.3",
    "jest-esm-transformer": "^1.0.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@yasp/models": "workspace:*",
    "@yasp/asset-amount": "workspace:*",
    "lodash": "^4.17.21",
    "viem": "^0.3.28",
    "tronweb": "5.3.0"
  },
  "publishConfig": {
    "access": "restricted"
